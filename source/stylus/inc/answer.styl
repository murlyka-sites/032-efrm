.answer {
	padding 30px 30px 30px
	text-align center
	
	&__icon {
		display block
		width 90px
		height auto
		margin 0 auto 54px
		color $color-steel-blue
		
		@media (min-width 480px) {
			width 120px
		}
		
		@media (min-width 640px) {
			width 164px
		}
	}
	
	&__explanations {
		font-size 20px 
		font-weight 600 
		color #d7d7d7
		
		@media (min-width 640px) {
			font-size 30px 
		}
	}
	
	&__title {
		margin-bottom 35px 
		font-size 32px 
		font-weight 600 
		
		@media (min-width 480px) {
			font-size 40px 
		}
		
		@media (min-width 640px) {
			font-size 50px 
		}
	}
	
	&__info {
		font-size 16px 
		color #1a1a1a
		
		@media (min-width 480px) {
			font-size 20px 
		}
		
		@media (min-width 640px) {
			font-size 24px 
		}
	}
	
	&__row {
		margin-bottom 10px
	}
	
	&__foo {
		margin-top 100px
	}
	
	&__button {
		display block
		min-width 240px
		padding 24px
		margin auto
		font-size 24px 
		
		@media (min-width 480px) {
			font-size 30px 
		}
		
		@media (min-width 640px) {
			width 400px 
			padding 35px 15px
			font-size 36px
		}
		
		&_offset {
			margin-bottom 28px 
		}
	}
}