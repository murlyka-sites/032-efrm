@import "inc/variables"
@import "inc/color"

.page {
	padding 0
	margin 0
	font-family "Open Sans", sans-serif
}

.paper-denim {
	background-color $color-denim
}

.paper-gray {
	background-color $color-white-three 
}

.paper-border-white {
	background white
	border 1px solid #c4c4c4
}

.field {
	box-sizing border-box
	display inline-block
	height 32px
	padding 5px
	border-radius 4px
  background-color white
  border solid 2px $color-white-two
  font-family 'Open Sans', sans-serif
  font-size 12px
  font-weight 600
  
  @media (min-width 420px) {
  	height 45px
  }
  
  @media (min-width 480px) {
  	height 60px
  	font-size 16px 
  	font-weight 600 
  	padding 10px 20px
  }
  
  &:focus {
  	border-color $color-warm-grey
  	outline none
  }
  
	&:invalid,
	&_invalid,
	&_invalid:focus {
		border-color $color-pink-red
	}
	
	&:-webkit-autofill {
		box-shadow inset 0 0 0 50px #fff
	}
  
  &_textarea {
  	height 130px
  	padding 15px
  	resize none
  }
}



.field-radio,
.field-checkbox {
	box-sizing border-box
	width 10px
	height 10px
	margin 0 3px 0 0
	border solid 1px $color-white-two
	border-radius 2px
	flex none
	
	@media (min-width 640px) {
		width 15px 
		height 15px
		margin 0 10px 0 0
	}
}

.field-with-icon {
	box-sizing border-box
	position relative
	display block
	
	&__field {
		padding-left 40px
		
		@media (min-width 420px) {
			padding-left 55px 
		}
		
		@media (min-width 480px) {
			padding-left 80px
		}
	}
	
	&__field:focus + &__icon {
		border-color $color-warm-grey
		color $color-warm-grey
	}
	
	&__icon {
		position absolute
		top 0
		left 0
		width 28px
		height 100%
		display flex
		align-items center
		justify-content center
		color $color-white-two
		border-right 2px solid $color-white-two
		
		@media (min-width 420px) {
			width 45px
		}
		
		@media (min-width 480px) {
			width 50px
		}
	}
}

.field-offset {
	margin-bottom 10px
	
	@media (min-width 420px) {
		margin-bottom 15px
	}
	
	@media (min-width 480px) {
		margin-bottom 24px
	}
}

.label-with-field {
	display block
	padding-top 10px
	
	&__label {
		font-size 12px 
		color $color-warm-grey
		
		@media (min-width 480px) {
			padding-top 15px
			font-size 16px 
		}
		
		@media (min-width 640px) {
			padding-top 20px
			font-size 20px 
		}
	}
}

.label-with-checkbox,
.label-with-radio {
	display flex
	align-items flex-start
	font-size 10px 
	color $color-warm-grey
	padding-right 5px 
	
	@media (min-width 420px) {
		font-size 12px 
	}
	
	@media (min-width 640px) {
		font-size 16px 
	}
}

.button {
	line-height 1 
	box-sizing border-box
	display inline-block
	min-width 80px
	padding 10px 10px 9px
	border-radius 4px
	border none
	font-size 11px
	font-weight 600
	text-transform uppercase
	text-align center
	font-family "Open Sans", sans-serif
	
	@media (min-width 420px) {
		min-width 100px
	}
	
	@media (min-width 520px) {
		min-width 120px
		padding 20px 
		font-size 16px 
	}
	
	@media (min-width 640px) {
		min-width 160px
	}
	
	&:focus {
		outline none
	}
	
	&:hover {
		box-shadow 0 0 12px 0 rgba(46, 46, 46, 0.4)
	}
	
	&_theme {
		&_smoke {
			background $color-smoke
			color $color-warm-grey
			
			
			&:active {
				background $color-white-two
			}
		}
		
		&_denim {
			background $color-denim
			color white
			
			&:active {
				background $color-steel-blue
			}
		}
	}
}

.available {
	display block
	width 100%
}

.wrapper-popup-auth {
	display flex
	flex-direction column
	align-items center
	justify-content center
	min-height 100vh
}

.popup-auth {
	width 320px
	margin 20px auto
	border-radius 4px
	overflow hidden
	background white
	max-width 600px
	
	@media (min-width 360px) {
		width auto
		margin 20px
	}
	
	@media (min-width 640px) {
		margin 20px auto
	}
	
	&__header {
		padding 10px 
		background $color-steel-blue
		color white
		font-size 12px
		font-weight 600 
		text-align center
		
		@media (min-width 480px) {
			font-size 16px
			padding 15px
		}
		
		@media (min-width 600px) {
			font-size 24px 
			padding 20px
		}
	}
	
	&__body {
		padding 14px 20px
		
		@media (min-width 480px) {
			padding 24px 40px 
		}
	}
	
	&__foo {
		display flex
		align-items center
		padding 0 20px 24px
		
		@media (min-width 480px) {
			padding 14px 40px 
		}
	}
	
	&__remember {
		margin-right auto 
	}
	
	&__button {
		margin-right 4px
		
		@media (min-width 520px) {
			margin-right 10px
		}
		
		&:last-child {
			margin-right 0 
		}
	}
}

.data-input {
	background white
	
	&__header {
		font-size 22px 
		font-weight 600
		line-height 1.2
		padding 20px
		text-align center
		background $color-steel-blue
		color white
		
		@media (min-width 600px) {
			padding 30px
			font-size 36px 
		}
	}
	
	&__body {
		padding 15px 20px
		margin-bottom 30px
		max-width 640px
		margin auto
		
		@media (min-width 640px) {
			padding 15px 30px
		}
	}
	
	&__foo {
		padding 30px 20px
		display flex
		justify-content center
		max-width 640px
		margin auto
		
		@media (min-width 640px) {
			padding 40px 30px
		}
	}
	
	&__button {
		flex auto
		width 130px
		padding 14px 10px
		font-size 16px 
		margin-right 10px
		
		@media (min-width 480px) {
			padding 20px 10px
			font-size 20px 
		}
		
		@media (min-width 640px) {
			padding 30px 10px
			font-size 30px 
		}
		
		&:last-child {
			margin-right 0
		}
	}
}

.toolbar {
	background $color-steel-blue 
	
	@media (min-width 768px) {
		display flex
	}

	&__button {
		display block
		border-bottom 2px solid $color-denim
		font-size 14px 
		font-weight 600 
		line-height 1
		padding 20px
		text-align center 
		text-decoration none
		color white
		
		@media (min-width 768px) {
			border-bottom none 
			margin-right 40px 
		}
		
		@media (min-width 992px) {
			margin-right 115px 
		}
		
		&:last-child {
			border-bottom none
			border none
		}
	}
	
	&__icon {
		display inline-block
		margin-right 5px 
		font-size 20px 
	}
}

.table-with-date {
	width 100%
	font-weight 600  
	text-align center
	font-size 11px
	border-collapse collapse
	position relative
	box-shadow 0px 5px 24.5px 0.5px rgba(42, 42, 42, 0.2)
	
	@media (min-width 640px) {
		font-size 20px 
	}
	
	&__header {
		font-size 9px
		text-transform uppercase
		
		@media (min-width 640px) {
			font-size 20px 
		}
	}
	
	&__cell {
		padding 10px 
		
		@media (min-width 900px) {
			padding 25px
		}
	}
	
	&__td {
		position relative
		border 1px solid $color-warm-grey
		
		
		
		&_disabled {
			color $color-white-two
		}
	}
	
	&__td:hover &__session,
	&__td_active &__session {
		position absolute
		top -1px
		left -1px
		right -1px
		bottom -1px
		display flex
		align-items center
		justify-content center
		background $color-denim
		color white
		cursor pointer 
		border-color $color-denim
		border-radius 4px
	}
	
	&__desc {
		font-size 8px 
		text-align left
	}
}

.session {
	display flex
	flex-direction column
	align-items stretch !important
	position absolute
	top -1px
	left -1px
	right -1px
	bottom -1px
	padding 3px
	background $color-denim
	color white
	border-radius 4px
	cursor pointer
	
	&_disabled {
		background #e7e7e9 
		top 0
		left 0
		right 0
		bottom 0
		cursor not-allowed
	}
	
	&__time {
		padding 7px 
		
		@media (min-width 900px) {
			padding 22px
		}
	}
	 
	&__desc {
		margin auto -3px -3px
		padding 3px 
		font-size 8px 
		font-weight 400
		text-align left
		border-top 1px solid white
		letter-spacing -0.09em
		
		@media (min-width 640px) {
			font-size 14px 
		}
		
		@media (min-width 900px) {
			font-size 16px 
		}
	}
}

.date-table {
	

	&__header {
		
		background $color-steel-blue 
		color white
	}
	
	&__tab {
		border-bottom 2px solid $color-denim
		font-size 14px 
		font-weight 600 
		line-height 1
		padding 20px
		text-align center 
		
		&-icon {
			display inline-block
			margin-right 5px 
			font-size 20px 
		}

		&:last-child {
			border-bottom none 
		}
	}
}

.legend {
	display flex
	justify-content space-between
	padding 20px 10px 
	
	&__column {
		display flex
		align-items center
		font-size 11px 
		color #2322323
		margin-right 10px
		
		@media (min-width 640px) {
			font-size 18px 
		}
		
		@media (min-width 900px) {
			margin-right 25px 
		}
	}
	
	&__icon {
		box-sizing border-box
		border-radius 2.5px
		width 10px
		height 10px
		display inline-block
		margin-right 5px 
		
		@media (min-width 640px) {
			width 16px 
			height 16px
		}
	}
}

.record {
	padding 20px
	font-size 14px 
	font-weight 600
	text-align center 
	
	@media (min-width 640px) {
		font-size 24px 
	}
	
	@media (min-width 900px) {
		text-align left
	}
	
	&__title {
		color #222222
		margin-bottom 15px 
	}
	
	&__row {
		color $color-black
		margin-bottom 8px 
		
		@media (min-width 900px) {
			display inline-block
			margin-right 30px 
		}
	}
}

.date-table {
	padding-bottom 35px
	text-align center
	
	&__body {
		@media (min-width 900px) {
			padding 0 20px 0 40px 
		}
	}
	
	&__button {
		width 250px
		padding 16px 
		font-size 24px 
		margin-top 40px
		
		@media (min-width 640px) {
			width 450px
			font-size 40px 
			padding 30px 
			margin-top 85px 
		}
		
		@media (min-width 900px) {
			width 280px 
			padding 20px 
			margin-top 0
			margin-left auto
		}
	}
	
	&__foo {
		
		@media (min-width 900px) {
			display flex
			align-items center
			margin-top 20px
		}
	}
}

.hidden {
	display none
}

.visible {
	display block
}

.hidden-sm {
	@media (min-width 640px) {
		display none
	}
}

.visible-sm {
	@media (min-width 640px) {
		display block
	}
}


.hidden-md {
	@media (min-width 900px) {
		display none
	}
}

.visible-md {
	@media (min-width 900px) {
		display block
	}
}


@import "inc/answer"